{
  "swagger": "2.0",
  "info": {
    "title": "小红书社区 App API",
    "description": "仿小红书社区平台 MVP 版本 API 文档",
    "version": "1.0.0",
    "contact": {
      "name": "Backend Team"
    }
  },
  "host": "api.example.com",
  "basePath": "/api/v1",
  "schemes": ["https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "JWT Token: Bearer <token>"
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["认证"],
        "summary": "用户注册（手机号+验证码）",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/RegisterRequest"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "注册成功",
            "schema": {
              "$ref": "#/definitions/RegisterResponse"
            }
          },
          "400": {
            "description": "参数错误或验证码无效",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/auth/send-code": {
      "post": {
        "tags": ["认证"],
        "summary": "发送短信验证码",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/SendCodeRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "发送成功",
            "schema": {
              "$ref": "#/definitions/CommonResponse"
            }
          }
        }
      }
    },
    "/users/{userId}": {
      "get": {
        "tags": ["用户"],
        "summary": "获取用户资料",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "schema": {
              "$ref": "#/definitions/UserProfileResponse"
            }
          },
          "404": {
            "description": "用户不存在",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/users/profile": {
      "put": {
        "tags": ["用户"],
        "summary": "更新个人资料",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UpdateProfileRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "更新成功",
            "schema": {
              "$ref": "#/definitions/UserProfileResponse"
            }
          }
        }
      }
    },
    "/users/avatar": {
      "post": {
        "tags": ["用户"],
        "summary": "上传头像",
        "security": [{ "Bearer": [] }],
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "name": "file",
            "in": "formData",
            "type": "file",
            "required": true,
            "description": "头像图片，≤2MB"
          }
        ],
        "responses": {
          "200": {
            "description": "上传成功",
            "schema": {
              "$ref": "#/definitions/AvatarUploadResponse"
            }
          }
        }
      }
    },
    "/notes": {
      "post": {
        "tags": ["笔记"],
        "summary": "发布笔记",
        "security": [{ "Bearer": [] }],
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "name": "title",
            "in": "formData",
            "type": "string",
            "required": true,
            "maxLength": 30
          },
          {
            "name": "content",
            "in": "formData",
            "type": "string",
            "required": true,
            "maxLength": 1000
          },
          {
            "name": "images",
            "in": "formData",
            "type": "array",
            "items": {
              "type": "file"
            },
            "collectionFormat": "multi",
            "description": "1～9张图片，每张≤5MB"
          }
        ],
        "responses": {
          "201": {
            "description": "发布成功",
            "schema": {
              "$ref": "#/definitions/CreateNoteResponse"
            }
          },
          "400": {
            "description": "内容含敏感词或参数错误",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/notes/feed": {
      "get": {
        "tags": ["笔记"],
        "summary": "获取首页 Feed 流",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "type": "integer",
            "default": 1
          },
          {
            "name": "size",
            "in": "query",
            "type": "integer",
            "default": 10,
            "maximum": 20
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "schema": {
              "$ref": "#/definitions/FeedResponse"
            }
          }
        }
      }
    },
    "/notes/{noteId}": {
      "get": {
        "tags": ["笔记"],
        "summary": "获取笔记详情",
        "parameters": [
          {
            "name": "noteId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "schema": {
              "$ref": "#/definitions/NoteDetailResponse"
            }
          },
          "404": {
            "description": "笔记不存在",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/notes/{noteId}/like": {
      "post": {
        "tags": ["互动"],
        "summary": "点赞/取消点赞",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "noteId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "操作成功",
            "schema": {
              "$ref": "#/definitions/LikeResponse"
            }
          }
        }
      }
    },
    "/notes/{noteId}/collect": {
      "post": {
        "tags": ["互动"],
        "summary": "收藏/取消收藏",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "noteId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "操作成功",
            "schema": {
              "$ref": "#/definitions/CollectResponse"
            }
          }
        }
      }
    },
    "/notes/{noteId}/comments": {
      "post": {
        "tags": ["互动"],
        "summary": "发表评论",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "noteId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateCommentRequest"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "评论成功",
            "schema": {
              "$ref": "#/definitions/CreateCommentResponse"
            }
          },
          "400": {
            "description": "内容超长",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/notes/{noteId}/comments": {
      "get": {
        "tags": ["互动"],
        "summary": "获取评论列表",
        "parameters": [
          {
            "name": "noteId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "page",
            "in": "query",
            "type": "integer",
            "default": 1
          },
          {
            "name": "size",
            "in": "query",
            "type": "integer",
            "default": 10
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "schema": {
              "$ref": "#/definitions/CommentListResponse"
            }
          }
        }
      }
    },
    "/users/{userId}/follow": {
      "post": {
        "tags": ["关注"],
        "summary": "关注用户",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "操作成功",
            "schema": {
              "$ref": "#/definitions/FollowResponse"
            }
          }
        }
      }
    },
    "/users/{userId}/follow": {
      "delete": {
        "tags": ["关注"],
        "summary": "取消关注",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "操作成功",
            "schema": {
              "$ref": "#/definitions/FollowResponse"
            }
          }
        }
      }
    },
    "/search": {
      "get": {
        "tags": ["搜索"],
        "summary": "搜索笔记",
        "parameters": [
          {
            "name": "keyword",
            "in": "query",
            "required": true,
            "type": "string",
            "maxLength": 20
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "schema": {
              "$ref": "#/definitions/SearchResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "RegisterRequest": {
      "type": "object",
      "properties": {
        "phone": { "type": "string", "pattern": "^1[3-9]\\d{9}$" },
        "code": { "type": "string", "minLength": 6, "maxLength": 6 }
      },
      "required": ["phone", "code"]
    },
    "RegisterResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "integer", "example": 200 },
        "message": { "type": "string", "example": "success" },
        "data": {
          "type": "object",
          "properties": {
            "userId": { "type": "integer", "format": "int64" },
            "nickname": { "type": "string" },
            "avatarUrl": { "type": "string", "format": "uri" },
            "token": { "type": "string" }
          }
        }
      }
    },
    "SendCodeRequest": {
      "type": "object",
      "properties": {
        "phone": { "type": "string", "pattern": "^1[3-9]\\d{9}$" }
      },
      "required": ["phone"]
    },
    "CommonResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "integer", "example": 200 },
        "message": { "type": "string" }
      }
    },
    "UserProfileResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "integer" },
        "data": {
          "type": "object",
          "properties": {
            "userId": { "type": "integer", "format": "int64" },
            "nickname": { "type": "string" },
            "avatarUrl": { "type": "string" },
            "bio": { "type": "string" },
            "followingCount": { "type": "integer" },
            "followerCount": { "type": "integer" }
          }
        }
      }
    },
    "UpdateProfileRequest": {
      "type": "object",
      "properties": {
        "nickname": { "type": "string", "maxLength": 50 },
        "bio": { "type": "string", "maxLength": 100 }
      }
    },
    "AvatarUploadResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "integer" },
        "data": {
          "type": "object",
          "properties": {
            "avatarUrl": { "type": "string", "format": "uri" }
          }
        }
      }
    },
    "CreateNoteResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "integer" },
        "data": {
          "type": "object",
          "properties": {
            "noteId": { "type": "integer", "format": "int64" },
            "title": { "type": "string" },
            "images": {
              "type": "array",
              "items": { "type": "string", "format": "uri" }
            }
          }
        }
      }
    },
    "FeedResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "integer" },
        "data": {
          "type": "object",
          "properties": {
            "list": {
              "type": "array",
              "items": { "$ref": "#/definitions/NoteItem" }
            },
            "hasMore": { "type": "boolean" }
          }
        }
      }
    },
    "NoteItem": {
      "type": "object",
      "properties": {
        "noteId": { "type": "integer", "format": "int64" },
        "userId": { "type": "integer", "format": "int64" },
        "nickname": { "type": "string" },
        "avatarUrl": { "type": "string" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "images": {
          "type": "array",
          "items": { "type": "string" }
        },
        "likeCount": { "type": "integer" },
        "collectCount": { "type": "integer" },
        "commentCount": { "type": "integer" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "NoteDetailResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "integer" },
        "data": { "$ref": "#/definitions/NoteItem" }
      }
    },
    "LikeResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "integer" },
        "data": {
          "type": "object",
          "properties": {
            "liked": { "type": "boolean" },
            "likeCount": { "type": "integer" }
          }
        }
      }
    },
    "CollectResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "integer" },
        "data": {
          "type": "object",
          "properties": {
            "collected": { "type": "boolean" },
            "collectCount": { "type": "integer" }
          }
        }
      }
    },
    "CreateCommentRequest": {
      "type": "object",
      "properties": {
        "content": { "type": "string", "minLength": 1, "maxLength": 200 }
      },
      "required": ["content"]
    },
    "CreateCommentResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "integer" },
        "data": {
          "type": "object",
          "properties": {
            "commentId": { "type": "integer", "format": "int64" },
            "content": { "type": "string" },
            "userId": { "type": "integer", "format": "int64" },
            "nickname": { "type": "string" },
            "createdAt": { "type": "string", "format": "date-time" }
          }
        }
      }
    },
    "CommentListResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "integer" },
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "commentId": { "type": "integer", "format": "int64" },
              "content": { "type": "string" },
              "userId": { "type": "integer", "format": "int64" },
              "nickname": { "type": "string" },
              "createdAt": { "type": "string", "format": "date-time" }
            }
          }
        }
      }
    },
    "FollowResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "integer" },
        "data": {
          "type": "object",
          "properties": {
            "following": { "type": "boolean" }
          }
        }
      }
    },
    "SearchResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "integer" },
        "data": {
          "type": "object",
          "properties": {
            "list": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "noteId": { "type": "integer", "format": "int64" },
                  "title": { "type": "string" },
                  "coverImage": { "type": "string" },
                  "userId": { "type": "integer", "format": "int64" },
                  "nickname": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "ErrorResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "integer", "example": 1001 },
        "message": { "type": "string", "example": "用户未登录" },
        "data": { "type": "null" }
      }
    }
  }
}